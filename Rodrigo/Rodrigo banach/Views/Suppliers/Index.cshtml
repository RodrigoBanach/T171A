                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>

                            @Html.ActionLink("Alterar",
                           "Edit", new { id =
                           item.SupplierId}) |
                            @Html.ActionLink("Detalhes",
                           "Details", new { id =
                           item.SupplierId}) |
                            @Html.ActionLink("Eliminar",
                           "Delete", new {id =
                           item.SupplierId})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
       

        @Html.ActionLink("Registrar um novo FABRICANTE",
"Create", null, new
{
    @class =
"btn btn-success"
})
